def play_game(questions):

  score = ask_questions (questions)
  
def difficulty(easy,hard):
  print("Choose your difficulty: ")
  print("(a) Easy")
  print("(b) Hard")
  
  choice = input("Choice: ")
  
  if choice == "a":
    questions = easy
  elif choice == "b":
    questions = hard
  return questions
    
def high_scores():
  high_score = [
                   (17,"mark"),
                   (13,"donte"),
                    (11,"ethan"), ]
                   
  for player in high_score:
    print(player)

  main()




              
def ask_questions(questions):
  score = 0
  for question in questions:
    print(question[0])
    response = input()
    if response == question[1]:
      score += 1
      print("correct")
    else:
      print("wrong")
      
  return score


main()
  
